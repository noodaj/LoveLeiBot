{
	"compilerOptions": {
		"target": "es2016",
		"module": "CommonJS",
		"lib": [
			"es2021"
		],
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
	},
	"exclude": [
		"dist",
		"node_modules",
	],
}